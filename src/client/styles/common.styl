body
  margin 0
  padding 0
  h1, h2, h3, h4, h5, h6, p, dl, dd, dt, ol, li, ul
    margin 0
  a
    text-decoration none
    color #303030
  a:hover
    color #87CEFA

.m-overflow-ellipsis
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

.m-nav
  height 60px
  display flex
  justify-content space-between
  padding 0 50px
  background rgba(71,71,71,0.5)
  a
    padding 0 10px
    margin-right 50px
    display inline-block
    font-size 18px
    line-height 60px
    color #fff
    cursor pointer
  .nav-box
    flex 1
    a
      border-bottom 2px solid transparent
    a.active
      color #97FFFF
      border-bottom 2px solid #97FFFF
    a:hover
      color #97FFFF