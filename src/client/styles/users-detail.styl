.user-detail
	background #f5f5f6
	padding-bottom 200px
	.user-info
		display flex
		margin-bottom 20px
		padding 20px
		background url("https://img.alicdn.com/tfs/TB1FWivgKSSBuNjy0FlXXbBpVXa-650-433.jpg") no-repeat center
		background-size cover
		.profile-photo
			margin-right 20px
			img
				width 80px
				height 80px
				border-radius 50%
		.introduction
			padding-top 10px
			p
				margin-bottom 6px
	.user-detail-content
		display flex
		min-height 500px
		padding-left 20px
		padding-right 20px
		ul.navs
			flex-shrink 0
			width 180px
			margin-right 30px
			background #fff
			.header
				font-size 20px
			li
				height 50px
				padding-left 8px
				border-left 2px solid transparent
				font-size 16px
				line-height 50px
				cursor pointer
			li.nav:hover
				background rgba(0,193,222,.06)
				border-left 2px solid #00c1de
			li.nav.active
				border-left 2px solid #00c1de
		.content
			flex 1
			overflow hidden
			background #fff
			.article-list
				.title
					height 50px
					padding-left 20px
					border-bottom 1px solid #000
					font-size 18px
					line-height 50px
				.article
					display block
					dl
						display flex
						padding 10px 10px
						dt
							display flex
							justify-content center
							align-items center
							margin-right 8px
							img
								max-width 160px
								max-height 160px
						dd
							flex 1
							overflow hidden
							padding 10px
							p
								font-size 14px
								line-height 20px
							p.article-header
								display flex
								justify-content space-between
								font-size 16px
								margin-bottom 8px
								.article-title
									flex 1
							p.article-summary
								display: -webkit-box;
								-webkit-box-orient vertical
								height 40px
								overflow hidden
								-webkit-line-clamp 2
				.article:hover
					color #000
					background #fafafa
					p.article-header .article-title
						color #87cefa
				.no-data
					padding-top 160px
					text-align center